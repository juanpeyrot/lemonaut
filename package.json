{
  "name": "lemonaut",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./errors": {
      "import": "./dist/errors/index.js",
      "require": "./dist/errors/index.js"
    },
    "./middlewares": {
      "import": "./dist/middlewares/index.js",
      "require": "./dist/middlewares/index.js"
    },
    "./types": {
      "import": "./dist/types/index.d.js",
      "require": "./dist/types/index.d.js"
    }
  },
	"files": [
    "dist",
    "README.md"
  ],
  "description": "Juicy microframework for REST APIs in Node.js",
  "keywords": [
    "framework",
    "node",
    "rest",
    "microframework",
    "typescript"
  ],
  "author": "Juan Peyrot",
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "rimraf ./dist && tsc",
    "start": "npm run build && node dist/app.js",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/busboy": "^1.5.4",
    "@types/ejs": "^3.1.5",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^22.15.30",
    "@types/qs": "^6.14.0",
    "@vitest/coverage-v8": "^3.2.3",
    "@vitest/ui": "^3.2.3",
    "rimraf": "^6.0.1",
    "supertest-fetch": "^2.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "busboy": "^1.6.0",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "mime-types": "^3.0.1",
    "path-to-regexp": "^8.2.0",
    "qs": "^6.14.0"
  }
}
